    <script>
    function validateForm() {
    const fullName = document.getElementById('full-name').value;
    const email = document.getElementById('email').value;
    const address = document.getElementById('address').value;
    const proofAddress = document.getElementById('proof-address').value;
    const proofID = document.getElementById('proof-id').value;
    const selectedChalet = document.getElementById('chalet-select').value;
    const numOfVisitors = parseInt(document.getElementById('num-people').innerText);

    if (fullName === '' || email === '' || address === '' || proofAddress === '' || proofID === '' || selectedChalet === '' || isNaN(numOfVisitors) || numOfVisitors <= 0) {
        showErrorPopup(); // Display the error popup
        return false; // Prevent form submission
    }

    // If all fields are filled out, show the success popup
    showPopup();
    return false; // Prevent form submission
}


</script>

